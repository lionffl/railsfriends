<div class="card">
  <div class="card-header">
    <%= @friend.first_name %> <%= @friend.last_name %>
  </div>
  <div class="card-body">
    <%= @friend.email %> |
    <%= @friend.phone %> | 
    <%= @friend.twitter %> |
  </div>
</div>
<br/>
<%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> |
<%= link_to 'Back', friends_path, class:"btn btn-secondary" %> |
<td><%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
